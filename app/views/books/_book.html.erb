<div id="<%= dom_id book %>">
  <p>
    <strong><%= I18n.t('attributes.title') %></strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= I18n.t('attributes.memo') %></strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= I18n.t('attributes.author') %></strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= I18n.t('attributes.picture') %></strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
