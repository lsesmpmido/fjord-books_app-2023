<p>
  <strong><%= ReportMention.model_name.human %>:</strong>
  <% if @mentioned_reports.any? %>
    <ul>
      <% @mentioned_reports.each do |mention| %>
        <li><%= link_to mention.title, report_path(mention.id) %></li>
      <% end %>
    </ul>
  <% else %>
    (<%= t('.no_mentions') %>)
  <% end %>
</p>
